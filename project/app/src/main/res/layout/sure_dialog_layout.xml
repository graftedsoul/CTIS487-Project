<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sureLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textBackgroundCyanS"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:background="#71D1A8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDialogTitleS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/areYouSure"
        android:textColor="#F8F6F6"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textBackgroundCyanS"
        app:layout_constraintEnd_toEndOf="@+id/textBackgroundCyanS"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toEndOf="@+id/imageWarningS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588" />

    <ImageView
        android:id="@+id/imageWarningS"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toTopOf="@+id/textDialogContentS"
        app:layout_constraintEnd_toEndOf="@+id/textBackgroundCyanS"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textBackgroundCyanS"
        app:layout_constraintVertical_bias="0.375"
        app:tint="#FF3232"
        tools:srcCompat="@drawable/ic_baseline_warning_24" />

    <TextView
        android:id="@+id/textDialogContentS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/wantToDelete"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBackgroundCyanS" />

    <Button
        android:id="@+id/buttonCancelS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/cancelName"
        android:textColor="@color/almost_black"
        app:backgroundTint="@color/light_green"
        app:icon="@drawable/ic_baseline_cancel_24"
        app:iconTint="@color/almost_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDialogContentS" />

    <Button
        android:id="@+id/buttonDeleteS"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/deleteName"
        app:backgroundTint="@color/pink"
        app:icon="@drawable/ic_twotone_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDialogContentS"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>